SUBDIRS = base\
	  build\
          daemon\
          dp_reference\
	  dp_sparse\
	  dp_vector\
	  fm\
	  misc\
          search\
	  programs
# experiments
# utilities

HDRS =  

OBJS = 

STATS = 

BENCHMARKS = 

UTESTS =

ITESTS = 

EXAMPLES = 



# VPATH and shell configuration
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
srcdir       = @srcdir@
VPATH        = @srcdir@ 
SHELL        = /bin/sh

# Installation targets
#
prefix      = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
bindir      = @bindir@
libdir      = @libdir@
includedir  = @includedir@
mandir      = @mandir@
docdir      = @docdir@
pdfdir      = @pdfdir@
mandir      = @mandir@
man1dir     = ${mandir}/man1
man1ext     = .1

CC        = @CC@
CFLAGS    = @CFLAGS@ @PTHREAD_CFLAGS@ @PIC_FLAGS@
SIMDFLAGS = @SIMD_CFLAGS@
CPPFLAGS  = @CPPFLAGS@
LDFLAGS   = @LDFLAGS@
DEFS      = @DEFS@
LIBS      = -lhmmer -leasel -ldivsufsort @LIBS@ @LIBGSL@ @PTHREAD_LIBS@ -lm
MPILIBS   = @MPILIBS@

AR        = @AR@ 
RANLIB    = @RANLIB@
INSTALL   = @INSTALL@

ESLDIR    = @HMMER_ESLDIR@
SADIR     = @HMMER_SADIR@

MYLIBDIRS = -L${top_builddir}/${ESLDIR} -L${top_builddir}/${SADIR} -L.
MYINCDIRS = -I${top_builddir}/${ESLDIR} \
            -I${top_builddir}/${SADIR} \
	    -I. \
            -I${top_srcdir}/${ESLDIR} \
	    -I${top_srcdir}/${SADIR} \
	    -I${top_srcdir}


# beautification magic stolen from git
QUIET_SUBDIR0 = +${MAKE} -C #space separator after -c
QUIET_SUBDIR1 = 
ifndef V
	QUIET_CC      = @echo '    ' CC $@;
	QUIET_GEN     = @echo '    ' GEN $@;
	QUIET_AR      = @echo '    ' AR $@;
	QUIET_SUBDIR0 = +@subdir=
	QUIET_SUBDIR1 = ; echo '    ' SUBDIR $$subdir; \
		        ${MAKE} -C $$subdir
endif

.PHONY: all dev tests check install uninstall distclean clean TAGS tags-append

all: libhmmer.a 
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir all; \
	done

dev: libhmmer.a
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir dev; \
	done

tests: libhmmer.a
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir tests; \
	done

check: libhmmer.a
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir check; \
	done

# We need to do one pass thru the subdirs to build libhmmer.a before
# we start trying to build any executables. That's why we make
# libhmmer.a a target, and force building the libhmmer-{subdir}.stamp
# target in each subdir.
.FORCE:
libhmmer.a: .FORCE
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir libhmmer-$$subdir.stamp; \
	done


install: libhmmer.a
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir install \
	done
	${INSTALL} -m 0755 libhmmer.a  ${DESTDIR}${libdir}/
	${INSTALL} -m 0644 p7_config.h ${DESTDIR}${includedir}/ 
	${INSTALL} -m 0644 hmmer.h     ${DESTDIR}${includedir}/ 

uninstall:
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir uninstall \
	done
	-rm -f ${DESTDIR}${includedir}/p7_config.h
	-rm -f ${DESTDIR}${includedir}/hmmer.h
	-rm -f ${DESTDIR}${libdir}/libhmmer.a

distclean: clean
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir distclean; \
	done
	-rm -f Makefile Makefile-subdirs.mk p7_config.h

clean:
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir clean; \
	done
	-rm -f *.o *~ Makefile.bak core ${PROGS} TAGS gmon.out
	-rm -f libhmmer.a 

tags-append:
	+@for subdir in ${SUBDIRS}; do \
	   echo '    ' SUBDIR $$subdir; \
	   ${MAKE} -C $$subdir tags-append; \
	done
	etags -o ${top_srcdir}/TAGS -a ${srcdir}/*.h ${srcdir}/*.in


