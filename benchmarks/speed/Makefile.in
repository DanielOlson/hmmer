top_srcdir = @top_srcdir@
srcdir     = @srcdir@
VPATH      = @srcdir@ 

.PHONY: all dev distclean clean tags-append

distclean: clean
	-rm -f Makefile

clean:
	-rm -f *~ 

tags-append:
	etags -o ${top_srcdir}/TAGS -a ${srcdir}/x-*
	etags -o ${top_srcdir}/TAGS -a ${srcdir}/*.pl
	etags -o ${top_srcdir}/TAGS -a ${srcdir}/*.in
